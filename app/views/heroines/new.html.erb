
<h1>Create Your Own Heroine </h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @heroine do |f| %>
  Alias: <%= f.text_field :name %><br />
  Super Name: <%= f.text_field :super_name %><br />
  Power: <%= f.collection_select :power_id, @powers, :id, :name %><br />
  <%= f.submit %>
<% end %>
